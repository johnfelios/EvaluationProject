@using BlazorApp1.Models
@using BlazorApp1.Services;

@inject IRepositoryService RepositoryService;

<EditForm Model="Cleaner" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>First Name:</label>
        <InputText @bind-Value="Cleaner.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Last Name:</label>
        <InputText @bind-Value="Cleaner.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Age:</label>
        <InputNumber @bind-Value="Cleaner.Age" class="form-control" />
    </div>
    <div class="form-group">
        <label>Wage:</label>
        <InputNumber @bind-Value="Cleaner.Wage" class="form-control" />
    </div>
    <div class="form-group">
        <label>Start Date:</label>
        <InputDate @bind-Value="Cleaner.StartDate" class="form-control" />
    </div>
    <div class="form-group">
        <label>Username:</label>
        <InputText @bind-Value="Cleaner.Username" class="form-control" />
    </div>
    <div class="form-group">
        <label>Password:</label>
        <InputText @bind-Value="Cleaner.Password" class="form-control" />
    </div>
  


</EditForm>

@code {
    [Parameter]
    public CleanerViewModel Cleaner { get; set; }
  
    private async void HandleValidSubmit()
    {
    }
}


